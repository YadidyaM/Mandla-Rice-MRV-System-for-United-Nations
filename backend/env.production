# Production Environment Variables for Mandla Rice MRV Backend
# This file should be used when deploying to Heroku

# Server Configuration
NODE_ENV=production
PORT=4000

# Database Configuration (if using external database)
# DATABASE_URL=your_production_database_url_here
# MONGODB_URI=your_production_mongodb_uri_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGINS=https://mandlamrv.netlify.app,https://mandla-rice-mrv-377709c13120.herokuapp.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14

# External APIs (if needed)
# OPENAI_API_KEY=your_openai_api_key_here
# PINATA_API_KEY=your_pinata_api_key_here
# PINATA_SECRET_KEY=your_pinata_secret_key_here

# Blockchain Configuration (if needed)
# ETHEREUM_RPC_URL=your_ethereum_rpc_url_here
# PRIVATE_KEY=your_private_key_here
# CONTRACT_ADDRESS=your_contract_address_here

# Monitoring & Analytics
# SENTRY_DSN=your_sentry_dsn_here
# GOOGLE_ANALYTICS_ID=your_ga_id_here

# Email Configuration (if needed)
# SMTP_HOST=your_smtp_host_here
# SMTP_PORT=587
# SMTP_USER=your_smtp_user_here
# SMTP_PASS=your_smtp_password_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Feature Flags
ENABLE_BLOCKCHAIN=true
ENABLE_SATELLITE_DATA=true
ENABLE_WHATSAPP_BOT=false
ENABLE_IVR_SYSTEM=false
ENABLE_CARBON_TRADING=true
ENABLE_MULTI_LANGUAGE=true

# IPCC Configuration
IPCC_TIER=2
BASELINE_EMISSION_FACTOR=1.3
AWD_SCALING_FACTOR=0.52
SRI_SCALING_FACTOR=0.68
UNCERTAINTY_THRESHOLD=0.15
GWP_METHANE=25
BUFFER_DISTANCE_METERS=100
